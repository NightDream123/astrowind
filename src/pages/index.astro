    </div>

    <div class="mt-12 space-y-8">
      {[t('index.faqs.item1.question'), t('index.faqs.item2.question'), t('index.faqs.item3.question')].map((question, index) => (
        <div class="border-b border-gray-200 pb-6">
          <button 
            class="flex w-full items-center justify-between text-left" 
            data-faq-btn={index}
            aria-expanded="false"
          >
            <h3 class="text-xl font-semibold">{question}</h3>
            <span class="ml-6 flex h-7 items-center transition-transform duration-200">
              <svg 
                class="h-6 w-6 transform transition-transform duration-200" 
                data-faq-icon={index}
                xmlns="http://www.w3.org/2000/svg" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </span>
          </button>
          <div 
            class="mt-4 hidden" 
            data-faq-content={index}
          >
            <p class="text-gray-600">{
          index === 0 
            ? t('index.faqs.item1.answer')
            : index === 1
            ? t('index.faqs.item2.answer')
            : t('index.faqs.item3.answer')
        }</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const buttons = document.querySelectorAll('[data-faq-btn]');
      
      buttons.forEach((button) => {
        button.addEventListener('click', () => {
          const index = button.getAttribute('data-faq-btn');
          const content = document.querySelector(`[data-faq-content="${index}"]`);
          const icon = document.querySelector(`[data-faq-icon="${index}"]`);
          
          // 切换显示状态
          if(content){
            content.classList.toggle('hidden');
            // 旋转箭头图标
          if (content.classList.contains('hidden')) {
            icon.style.transform = 'rotate(0deg)';
            button.setAttribute('aria-expanded', 'false');
          } else {
            icon.style.transform = 'rotate(180deg)';
            button.setAttribute('aria-expanded', 'true');
          }
          }
          
          
        });
      });
    });
  </script>
